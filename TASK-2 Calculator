num1 = float(input("Enter 1st number: "))
num2 = float(input("Enter 2nd number: "))

add = (num1+num2)
sub = (num1-num2)
mult =(num1*num2)


print("All the arithmetic operations of the given number")

print("The addition of the numbers is: ",add)
print("The subtraction of the numbers is: ",sub)
print("The multiplication of the numbers is: ",mult)

if num2!=0:
    div = (num1/num2)
    print("The division of the numbers is: ",div)
else:
    print("division not possible, please enter correct number")
